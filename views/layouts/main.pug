doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    script(src='/js/lib/pixi.js' defer='')
    script(src='/js/pixiScript.js' defer='')
    script(src='/js/lib/TagCloud.js' defer='')
    script(src='/js/tagcloudScript.js' defer='')
    link(rel='stylesheet' href='/css/style.css')
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,500;0,700;0,900;1,400;1,500&display=swap" rel="stylesheet")
    link(rel="stylesheet" href="/css/toastify.css")

    block css
    title High Society VN
    if existed
      body(onload=`showMsg("Tài khoản ${username} đã tồn tại")`)
    if validate
      body(onload=`showMsg("Xác thực mật khẩu thất bại")`)
    if wrongUsername
      body(onload=`showMsg("Tên tài khoản không tồn tại")`)
    if wrongPwd
      body(onload=`showMsg("Sai mật khẩu")`)
    if registered
      body(onload=`showMsg("Đăng kí thành công")`)
    if signedIn
      body(onload=`showMsg("Đăng nhập thành công")`)
    .wrapper
      header.header 
        .container
          .pixi__container
          ul.header__navbar
            li.header__navbar-item
              a.header__navbar-link(href="/") Trang chủ
            li.header__navbar-item(href="/posts" class=allPosts ? " header__navbar-item--active" : "")  
               a.header__navbar-link(href="/posts" class=allPosts ? " header__navbar-link--active" : "")  Tất cả bài viết
            li.header__navbar-item
               a.header__navbar-link(href="/posts") Bài viết theo chủ đề
            li.header__navbar-item
              a.header__navbar-link Công cụ
            li.header__navbar-item
               a.header__navbar-link Về HSV
            if userInfo
              li.header__navbar-item
                a.header__navbar-link(href="/auth/logout") Đăng xuất
            if !userInfo
              li.header__navbar-item
                a.header__navbar-link(href="/login") Đăng nhập/Đăng ký
      .main
        block main
        include ../includes/sidebar.pug

      footer
        p COPYRIGHT 2022 BY HIGHSOCIETYVIETNAM
    block script
    script(type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js")
    script(type="text/javascript" src="/js/toastify.js")
